# ==============================================================================
# Docker Compose Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your actual values
# ==============================================================================

# ==============================================================================
# Environment Configuration
# ==============================================================================
ENVIRONMENT=staging
LOG_LEVEL=INFO

# ==============================================================================
# IBKR Configuration
# ==============================================================================
# Interactive Brokers connection settings
# For paper trading, use port 4002; for live, use 4001

IBKR_HOST=host.docker.internal
IBKR_PORT=4002
IBKR_ACCOUNT=DU123456
IBKR_READ_ONLY=true

# ==============================================================================
# Vault Configuration (Development Mode)
# ==============================================================================
# NOTE: In production, use proper Vault deployment
DP_USE_VAULT=1
VAULT_TOKEN=dev-root-token
VAULT_ADDR=http://vault:8200

# ==============================================================================
# Risk Management Thresholds
# ==============================================================================
# Kill-switch thresholds
KILL_PNL_THRESHOLD=-0.05          # -5% PnL kill-switch
MAX_DRAWDOWN_THRESHOLD=0.15       # 15% max drawdown
MIN_PSR_THRESHOLD=0.20            # PSR minimum threshold

# ==============================================================================
# Strategy Configuration
# ==============================================================================
# Signal generation frequency
SIGNAL_FREQ_SEC=60

# ==============================================================================
# Order Execution Configuration
# ==============================================================================
MAX_CONCURRENT_ORDERS=10
ORDER_TIMEOUT_SEC=30

# ==============================================================================
# Monitoring Configuration
# ==============================================================================
# Grafana admin credentials (CHANGE IN PRODUCTION!)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
