{
  "dashboard": {
    "title": "Risk Monitoring - Algo Trading",
    "uid": "algo-trade-risk-monitoring",
    "tags": ["algo-trade", "order-plane", "risk"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Kill Switch Status",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "max(kill_switch_status)",
            "legendFormat": "Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "INACTIVE"},
              {"type": "value", "value": "1", "text": "TRIGGERED"}
            ]
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Order Fill Rate (%)",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "avg(fill_rate_percent)",
            "legendFormat": "Fill Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Order Latency P95 (ms)",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(order_latency_ms_bucket[5m]))",
            "legendFormat": "P95"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 500, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Risk Check Rejects (rate)",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(risk_check_rejects_total[5m]))",
            "legendFormat": "Rejects/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "graph",
        "title": "Kill Switch Status by Type",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "kill_switch_status",
            "legendFormat": "{{switch_type}}"
          }
        ],
        "yaxes": [
          {"format": "short", "min": 0, "max": 1}
        ],
        "seriesOverrides": [
          {"color": "red"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.5], "type": "gt"},
              "query": {"params": ["A", "1m", "now"]},
              "type": "query"
            }
          ],
          "name": "Kill Switch Triggered"
        }
      },
      {
        "id": 6,
        "type": "graph",
        "title": "Portfolio Drawdown (%)",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "portfolio_max_drawdown_percent",
            "legendFormat": "Max Drawdown"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Drawdown"}
        ],
        "thresholds": [
          {
            "value": 10,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          },
          {
            "value": 15,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 7,
        "type": "graph",
        "title": "Order Latency Percentiles (ms)",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(order_latency_ms_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(order_latency_ms_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(order_latency_ms_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency"}
        ],
        "seriesOverrides": [
          {"alias": "p99", "color": "red"},
          {"alias": "p95", "color": "yellow"},
          {"alias": "p50", "color": "green"}
        ]
      },
      {
        "id": 8,
        "type": "graph",
        "title": "Slippage (bps)",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(slippage_bps_bucket[10m]))",
            "legendFormat": "p95 - {{symbol}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Slippage (bps)"}
        ]
      },
      {
        "id": 9,
        "type": "graph",
        "title": "Order Flow (orders/sec)",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "rate(orders_total{status=\"submitted\"}[1m])",
            "legendFormat": "Submitted"
          },
          {
            "expr": "rate(orders_total{status=\"filled\"}[1m])",
            "legendFormat": "Filled"
          },
          {
            "expr": "rate(orders_total{status=\"rejected\"}[1m])",
            "legendFormat": "Rejected"
          },
          {
            "expr": "rate(orders_total{status=\"cancelled\"}[1m])",
            "legendFormat": "Cancelled"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Orders/sec"}
        ],
        "seriesOverrides": [
          {"alias": "Filled", "color": "green"},
          {"alias": "Rejected", "color": "red"},
          {"alias": "Submitted", "color": "blue"}
        ]
      },
      {
        "id": 10,
        "type": "graph",
        "title": "Risk Check Rejections by Reason",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18},
        "targets": [
          {
            "expr": "rate(risk_check_rejects_total[5m])",
            "legendFormat": "{{reason}}"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Rejects/sec"}
        ]
      },
      {
        "id": 11,
        "type": "graph",
        "title": "Transaction Costs (bps)",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(transaction_cost_bps_bucket[10m]))",
            "legendFormat": "p95 - {{symbol}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Cost (bps)"}
        ]
      },
      {
        "id": 12,
        "type": "graph",
        "title": "IBKR Connection Status",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "ibkr_connection_status",
            "legendFormat": "Connection"
          }
        ],
        "yaxes": [
          {"format": "short", "min": 0, "max": 1}
        ],
        "seriesOverrides": [
          {
            "color": "green",
            "fill": 5
          }
        ]
      },
      {
        "id": 13,
        "type": "table",
        "title": "Kill Switch Trigger History",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "kill_switch_triggers_total",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "trigger_type": "Trigger Type",
                "Value": "Total Triggers"
              }
            }
          }
        ]
      },
      {
        "id": 14,
        "type": "graph",
        "title": "IBKR API Error Rate",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "rate(ibkr_api_errors_total[5m])",
            "legendFormat": "{{error_code}} - {{error_type}}"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Errors/sec"}
        ]
      }
    ]
  }
}
