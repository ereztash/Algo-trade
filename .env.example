# ===================================================================
# Algo-Trade Environment Configuration
# ===================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control!
# ===================================================================

# ===================================================================
# Application Settings
# ===================================================================
LOG_LEVEL=INFO
ENVIRONMENT=development

# ===================================================================
# IBKR (Interactive Brokers) Configuration
# ===================================================================
# Connection details for IBKR TWS or IB Gateway
# Note: For Docker, use host.docker.internal to connect to host machine
IBKR_HOST=host.docker.internal
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# Market data connection (if different from execution)
IBKR_MARKET_HOST=host.docker.internal
IBKR_MARKET_PORT=7497
IBKR_MARKET_CLIENT_ID=2

# Execution connection
IBKR_EXEC_HOST=host.docker.internal
IBKR_EXEC_PORT=7497
IBKR_EXEC_CLIENT_ID=3

# IBKR Account ID (optional)
IBKR_ACCOUNT_ID=

# ===================================================================
# Kafka Configuration
# ===================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_GROUP_ID=algo-trade-consumer-group
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SESSION_TIMEOUT_MS=30000

# ===================================================================
# Database Configuration (PostgreSQL)
# ===================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=algo_trade
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ===================================================================
# Prometheus Metrics
# ===================================================================
PROMETHEUS_PORT=8000
PROMETHEUS_ENABLED=true

# ===================================================================
# Data Plane Configuration
# ===================================================================
# NTP time synchronization
NTP_DRIFT_MS=100

# Data quality gates
TARGET_COMPLETENESS=0.95
MARKET_RT_P95_MS=100

# OFI (Order Flow Imbalance) calculation
OFI_WINDOW_SIZE=10
OFI_ENABLED=true

# ===================================================================
# Order Plane Configuration
# ===================================================================
# Risk limits
MAX_GROSS_EXPOSURE=1000000
MAX_NET_EXPOSURE=500000
MAX_POSITION_SIZE=100000

# Throttling
POV_LIMIT=0.05
ADV_LIMIT=0.10

# ===================================================================
# Strategy Configuration
# ===================================================================
STRATEGY_ENABLED=true
STRATEGY_MODE=live
STRATEGY_SYMBOLS=AAPL,MSFT,GOOGL

# ===================================================================
# Monitoring & Observability
# ===================================================================
ENABLE_METRICS=true
ENABLE_TRACING=false
HEALTH_CHECK_PORT=8080

# ===================================================================
# Security
# ===================================================================
# API Keys (if applicable)
API_KEY=
API_SECRET=

# ===================================================================
# Development Settings
# ===================================================================
DEBUG=false
RELOAD=false
